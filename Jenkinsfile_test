node {
    stage('Checkout SCM') {
        git credentialsId: 'gitcredentials', url: 'https://github.com/LahbiziSafae/web-app-Docker'
    }

    stage('Build Docker Image') {
        sh 'docker build -t myrep:latest .'
    }

    stage('Push Docker Image to ECR') {
        withCredentials([
            string(credentialsId: 'accesskey', variable: 'accesskey'),
            string(credentialsId: 'secretkey', variable: 'secretkey'),
            string(credentialsId: 'awsregion', variable: 'awsregion')
        ]) {
            sh "aws ecr get-login-password --region ${awsregion} | docker login --username AWS --password-stdin 782096716764.dkr.ecr.us-west-2.amazonaws.com"
            sh "docker tag myrep:latest 782096716764.dkr.ecr.us-west-2.amazonaws.com/myrep:latest"
            sh "docker push 782096716764.dkr.ecr.us-west-2.amazonaws.com/myrep:latest"
        }
    }

    stage('Run Container on Dev Server') {
        sh 'docker run -p 8888:5000 -d --name my-app-python7 782096716764.dkr.ecr.us-west-2.amazonaws.com/myrep:latest'
    }
}
